  <style>
    /* Theme styles */
    :root {
      --bg-color: #ffffff;
      --text-color: #2c3e50;
      --sidebar-bg: #f5f7fa;
      --sidebar-text: #2c3e50;
      --border-color: #eaecef;
      --code-bg: #f6f8fa;
      --code-text: #476582;
      --link-color: #2c3e50;
      --link-hover: #42b983;
      --header-bg: #f5f7fa;
    }
    
    [data-theme="dark"] {
      --bg-color: #1e1e1e;
      --text-color: #e0e0e0;
      --sidebar-bg: #252526;
      --sidebar-text: #e0e0e0;
      --border-color: #404040;
      --code-bg: #2d2d2d;
      --code-text: #d4d4d4;
      --link-color: #e0e0e0;
      --link-hover: #42b983;
      --header-bg: #252526;
    }
    
    /* Base styles */
    html, body, #app {
      margin: 0;
      padding: 0;
      width: 100%;
      min-height: 100vh;
      overflow-x: hidden;
      background: #fff;
    }
    
    /* Layout container */
    .app-container {
      min-height: 100vh;
      position: relative;
      padding-left: 0;
      transition: padding 0.3s ease;
    }
    
    /* Sidebar container */
    .sidebar {
      width: 300px;
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      background: var(--sidebar-bg);
      color: var(--sidebar-text);
      border-right: 1px solid var(--border-color);
      z-index: 10;
      overflow-y: auto;
      transform: translateX(0);
      transition: transform 0.3s ease, background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
      padding: 60px 10px 20px 10px;
      box-sizing: border-box;
    }
    
    .sidebar ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .sidebar li {
      padding: 2px 10px;
      margin: 0;
      line-height: 1.2;
      transition: background-color 0.2s ease;
    }
    
    .sidebar li:hover {
      background-color: var(--border-color);
    }
    
    .sidebar a {
      color: var(--sidebar-text);
      text-decoration: none;
      display: block;
      transition: color 0.2s ease;
      padding: 2px 0;
    }
    
    .sidebar a:hover {
      color: var(--link-hover);
    }
    
    /* Active sidebar link */
    .sidebar a.router-link-active {
      color: var(--link-hover);
      font-weight: 500;
    }
    
    /* Nested sidebar items */
    .sidebar .sidebar-nav ul {
      padding-left: 15px;
    }
    
    /* Collapsible arrows */
    .sidebar .app-sub-sidebar > li > a:before,
    .sidebar .sidebar-nav > li > a:before {
      content: '‚ñ∂';
      display: inline-block;
      font-size: 10px;
      margin-right: 6px;
      transition: transform 0.2s ease;
    }
    
    .sidebar li.open > a:before {
      transform: rotate(90deg);
    }
    
    .sidebar .app-sub-sidebar {
      display: none;
    }
    
    .sidebar li.open > .app-sub-sidebar,
    .sidebar li.open > .sidebar-nav {
      display: block;
    }
    
    /* Sidebar section headers */
    .sidebar h2 {
      color: var(--sidebar-text);
      font-size: 1.1em;
      margin: 20px 0 10px 0;
      padding: 0 20px;
      font-weight: 600;
    }
    
    /* Show sidebar */
    body.sidebar-visible .sidebar {
      transform: translateX(0);
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
    }
    
    /* Main content area */
    .content {
      padding: 20px 40px;
      margin-left: 300px;
      max-width: 100%;
      box-sizing: border-box;
      background: var(--bg-color);
      color: var(--text-color);
      min-height: 100vh;
      transition: margin 0.3s ease;
    }
    
    /* Show sidebar */
    
    /* Collapsed sidebar */
    body.sidebar-collapsed .sidebar {
      transform: translateX(-300px);
    }
    body.sidebar-collapsed .content {
      margin-left: 0;
    }
    
    /* Ensure sidebar content is visible */
    .sidebar > * {
      visibility: visible;
      opacity: 1;
      transition: opacity 0.3s ease;
    }
    
    /* Sidebar toggle button */
    .sidebar-toggle {
      position: fixed;
      top: 10px;
      right: 60px;
      z-index: 1000;
      background: var(--sidebar-bg);
      border: 1px solid var(--border-color);
      color: var(--text-color);
      font-size: 20px;
      cursor: pointer;
      padding: 8px;
      border-radius: 4px;
    }
    
    /* Theme toggle button */
    .theme-toggle {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 100;
      background: var(--sidebar-bg);
      border: 1px solid var(--border-color);
      color: var(--text-color);
      font-size: 20px;
      cursor: pointer;
      padding: 8px;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
    }
    
    .theme-toggle:hover {
      background: var(--border-color);
    }
    
    /* Toggle buttons */
    .sidebar-toggle, .theme-toggle {
      position: fixed;
      z-index: 100;
      background: #42b983;
      color: white;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      font-size: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      transition: all 0.2s ease;
      opacity: 0.9;
    }
    
    .sidebar-toggle:hover, .theme-toggle:hover {
      opacity: 1;
      transform: scale(1.1);
      box-shadow: 0 3px 8px rgba(0,0,0,0.3);
    }
    
    .sidebar-toggle:active, .theme-toggle:active {
      transform: scale(0.95);
    }
    
    .sidebar-toggle {
      top: 20px;
      left: 20px;
    }
    
    .theme-toggle {
      top: 20px;
      right: 50px;
      background: #6c757d;
    }
    
    /* Overlay when sidebar is open */
    .sidebar-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.5);
      z-index: 5;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    body.sidebar-visible .sidebar-overlay {
      display: block;
      opacity: 1;
    }
    
    /* Toggle buttons */
    .toggle-button {
      position: fixed;
      z-index: 20;
      background: var(--theme-color, #42b983);
      color: white;
      border: none;
      border-radius: 4px;
      padding: 8px 12px;
      cursor: pointer;
      font-size: 16px;
    }
    
    .sidebar-toggle {
      top: 10px;
      left: 10px;
    }
    
    .theme-toggle {
      top: 10px;
      right: 65px;
      z-index: 100;
    }
    
    /* Fix sidebar positioning */
    .app-nav {
      left: 50 !important;
      right: auto !important;
      top: 0 !important;
      width: 250px !important;
      transition: none !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    }
    
    /* Remove any negative margins or transforms */
    .sidebar-toggle {
      position: fixed !important;
      z-index: 1000 !important;
      background: var(--theme-color, #42b983) !important;
      color: white !important;
      border: none !important;
      border-radius: 0 4px 4px 0 !important;
    }
    
    /* Ensure content doesn't overlap with sidebar */
    .content {
      margin-left: 300px !important;
      padding: 20px !important;
    }
    
    /* Reset body and html */
    body, html {
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    /* Clean up any conflicting styles */
    body, html {
      transform: none !important;
      transition: none !important;
    }
    
    /* Ensure proper layout structure */
    #app {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    
    /* Sidebar toggle button */
    .sidebar-toggle {
      position: fixed;
      left: 0;
      top: 0;
      padding: 15px;
      background: var(--theme-color, #42b983);
      color: white;
      z-index: 100;
      border: none;
      border-radius: 0 4px 4px 0;
    }
    
    /* Ensure proper dark/light theme toggle visibility */
    .darklight-theme-toggle {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 99;
      background: var(--theme-color, #42b983);
      color: white;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      font-size: 20px;
      cursor: pointer;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    
    /* Remove any unwanted margins from body/html */
    html, body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }
  </style>
  
